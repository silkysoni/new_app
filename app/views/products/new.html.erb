<%= render "devise/shared/error_messages", resource: @product %>
<div class='container'>
  <div class='row justify-content-center'>
    <div class='col-5'>
      <div class='mt-3'>
        <h1>Register Product</h1>
      </div>

      <%= form_with model: @product, url: product_register_path, local: true, html: { multipart: true } do |form| %>

        <div class='form-group row mt-3'>
          <%= form.label :name, "Name of product" %>
          <%= form.text_field :name, class: "form-control" %>
        </div>

        <div class='form-group row mt-3'>
          <%= form.label :price, "Enter price" %>
          <%= form.text_field :price, class: "form-control" %>
        </div>

        <div class='form-group row mt-3'>
          <%= form.label :image, "Upload image" %>
          <%= form.file_field :image, class: "form-control" %>
        </div>

        <div class='form-group row mt-3'>
          <%= form.label :category_id, "Select Category" %>
          <%= form.select :category_id, @categories.map { |category| [category.category_name, category.id] }, { prompt: "Choose a category" }, { class: "form-control", id: "category-select" } %>
        </div>

        <div class='form-group row mt-3'>
        <%= form.label :subcategory_id, "Select Subcategory" %>
        <%= form.select :sub_category_id, [], { prompt: "Choose a subcategory" }, { class: "form-control", id: "sub-category-select" } %>
        </div>

        <div class='form-group row mt-3'>
          <%= form.submit "Register Product", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
