<h1>Invoice ##<%= @cart.id %></h1>
<p>Date: <%= @cart.created_at.strftime("%Y-%m-%d") %></p>
<p>Customer: <%= @cart.user.name %></p>

<h2>Order Details</h2>
<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @cart.cart_items.each do |item| %>
      <tr>
        <td><%= item.product.name %></td>
        <td><%= item.quantity %></td>
        <td><%= format_price(item.total) %>

      </tr>
    <% end %>
  </tbody>
</table>

<h2>Total:  <%= format_price(@cart.subtotal) %></h2>
